{
  "name": "react-3d",
  "version": "0.0.1",
  "description": "Simple CLI utilities for domain driven development React aplications.",
  "main": "index.js",
  "author": "Tomasz Staszkiewicz",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --cache --ignore-pattern .eslintignore",
    "typecheck": "tsc --noEmit ",
    "build": "tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.1.0",
    "create-react-app": "^4.0.3",
    "fs-extra": "^9.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/src/templates/"
    ]
  }
}
